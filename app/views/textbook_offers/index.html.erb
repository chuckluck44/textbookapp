<p id="notice"><%= notice %></p>

<h1>Listing Textbook Offers</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Textbook</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @textbook_offers.each do |textbook_offer| %>
      <tr>
        <td><%= textbook_offer.user_id %></td>
        <td><%= textbook_offer.textbook_id %></td>
        <td><%= link_to 'Show', textbook_offer %></td>
        <td><%= link_to 'Edit', edit_textbook_offer_path(textbook_offer) %></td>
        <td><%= link_to 'Destroy', textbook_offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

